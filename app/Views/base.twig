        <a class="mobile-button">
            <img src="/images/icons/menu.svg" width="30"/>
        </a>
        <div class="logo">
            <a href="/">
                <img src="/images/logo.png">
            </a>
            Saskia&nbsp;Kerkhoff<br>
            Fotografie<br>
            <a href="tel:0628246203">0628246203</a>
        </div>
        {{ helper.menu('main')|raw }}
    </nav>
    <main>
        {% block templateBody '' %}
    </main>
{% endblock %}