{# @var helper \KikCMS\Services\Website\FrontendHelper #}

{% extends '@kikcms/frontend/base.twig' %}

{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/app.css"/>

    <link rel="shortcut icon" href="/images/favicon.ico"/>
    <link rel="apple-touch-icon" sizes="152x152" href="/images/icon.png">

    <link href="https://fonts.googleapis.com/css?family=Hind:400,600" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:700" rel="stylesheet">

    {% include '@website/partials/ga.twig' %}
{% endblock %}

{% block scripts %}
    {{ parent() }}
<script type="text/javascript" src="/js/vendor.js"></script>
<script type="text/javascript" src="/js/app.js"></script>
{% endblock %}

{% block body %}
    <nav>
        <a class="mobile-button">
            <img src="/images/icons/menu.svg" width="30" />
        </a>
        <a class="logo" href="/">
            <img src="/images/logo.png">
        </a>
        {{ helper.menu('main')|raw }}
    </nav>
    <main>
        {% block templateBody '' %}
    </main>
{% endblock %}